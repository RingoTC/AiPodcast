<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.A6" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize theme -->
        <!-- Primary color -->
        <item name="colorPrimary">@color/primary_variant</item>
        <!-- Darker variant of the primary color (used for status bar, etc.) -->
        <item name="colorPrimaryDark">@color/purple_700</item>
        <!-- Text and icons color on top of the primary color -->
        <item name="android:textColorPrimary">@color/white</item>
        <!-- Secondary color -->
        <item name="colorAccent">@color/teal_200</item>
        <!-- Status bar color -->
        <item name="android:statusBarColor">@color/primary_variant</item>
    </style>
    <style name="CustomChipStyle" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/chip_background_color_selector</item>
        <item name="android:textColor">@color/chip_text_color_selector</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="chipStrokeColor">@color/primary_light</item>
        <item name="chipEndPadding">12dp</item>
        <item name="chipStartPadding">12dp</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="SplashTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="android:statusBarColor">@color/primary_variant</item>
        <item name="android:navigationBarColor">@color/primary_variant</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>
</resources>